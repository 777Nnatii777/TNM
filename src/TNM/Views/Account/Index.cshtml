@{
    ViewData["Title"] = "Twoje konto";
}

<h2>Twoje konto</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Jesteś zalogowany jako: <strong>@User.Identity.Name</strong></p>
    <form asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Wyloguj się</button>
    </form>
}
else
{
    <p>Nie jesteś zalogowany.</p>
    <a asp-action="Login" class="btn btn-primary">Zaloguj się</a>
    <br />
    <a asp-action="Register" class="btn btn-secondary">Zarejestruj się</a>
}
